---
// Progress Widget - Pure static component with no interactivity
interface Props {
  config?: {
    data?: {
      progress?: number
      streak?: number
    }
  }
}

const { config } = Astro.props
const progress = config?.data?.progress || 45
const streak = config?.data?.streak || 7
---

<div class="flex flex-col h-full">
  <div class="flex items-center justify-center mb-4">
    <div class="relative w-32 h-32">
      <!-- Background circle -->
      <svg class="w-full h-full transform -rotate-90">
        <circle
          cx="64"
          cy="64"
          r="56"
          stroke="rgba(255,255,255,0.1)"
          stroke-width="12"
          fill="none"
        />
        <circle
          cx="64"
          cy="64"
          r="56"
          stroke="url(#gradient)"
          stroke-width="12"
          fill="none"
          stroke-dasharray={2 * Math.PI * 56}
          stroke-dashoffset={2 * Math.PI * 56 * (1 - progress / 100)}
          stroke-linecap="round"
          class="transition-all duration-500"
        />
        <defs>
          <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#ec4899" />
            <stop offset="100%" stop-color="#f43f5e" />
          </linearGradient>
        </defs>
      </svg>
      <div class="absolute inset-0 flex flex-col items-center justify-center">
        <span class="text-3xl font-bold text-white">{progress}%</span>
        <span class="text-xs text-white/50">Complete</span>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-2 mb-3">
    <div class="bg-gradient-to-br from-pink-500/10 to-rose-500/10 rounded-lg p-3 border border-pink-500/20 backdrop-blur-sm">
      <div class="flex items-center gap-2 mb-1">
        <svg class="w-4 h-4 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
        </svg>
        <span class="text-xs text-white/60">Streak</span>
      </div>
      <p class="text-xl font-bold text-pink-400">{streak} days</p>
    </div>

    <div class="bg-gradient-to-br from-purple-500/10 to-indigo-500/10 rounded-lg p-3 border border-purple-500/20 backdrop-blur-sm">
      <div class="flex items-center gap-2 mb-1">
        <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
        </svg>
        <span class="text-xs text-white/60">Level</span>
      </div>
      <p class="text-xl font-bold text-purple-400">12</p>
    </div>
  </div>

  <div class="flex-1 bg-white/5 rounded-lg p-3 border border-white/10 backdrop-blur-sm">
    <h4 class="text-xs font-semibold text-white/80 mb-2">Recent Achievements</h4>
    <div class="space-y-2">
      <div class="flex items-center gap-2 p-2 bg-white/5 rounded border border-white/10">
        <div class="w-8 h-8 bg-yellow-500/20 rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-lg">🏆</span>
        </div>
        <div>
          <p class="text-xs font-medium text-white">Week Warrior</p>
          <p class="text-xs text-white/50">7-day streak!</p>
        </div>
      </div>

      <div class="flex items-center gap-2 p-2 bg-white/5 rounded border border-white/10">
        <div class="w-8 h-8 bg-blue-500/20 rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-lg">📚</span>
        </div>
        <div>
          <p class="text-xs font-medium text-white">Bookworm</p>
          <p class="text-xs text-white/50">100 cards reviewed</p>
        </div>
      </div>
    </div>
  </div>
</div>
