---
import Layout from '@/layouts/Layout.astro'

// Interactive React components (require JavaScript)
import Navbar from '@/components/layout/Navbar'
import PlanetaryScene from '@/components/sections/PlanetaryScene'

// Static Astro components (zero JavaScript shipped)
import Hero from '@/components/sections/Hero.astro'
import FeatureShowcase from '@/components/sections/FeatureShowcase.astro'
import FeaturesGrid from '@/components/sections/FeaturesGrid.astro'
import HowItWorks from '@/components/sections/HowItWorks.astro'
import Footer from '@/components/layout/Footer.astro'

import '@/styles/animations.css'
---

<Layout title="Lumen Frontier - Push the Edge of What You Know">
  <!-- Interactive navbar: Load JS when browser is idle for better performance -->
  <Navbar client:idle />

  <!-- Static sections: Zero JavaScript, rendered at build time -->
  <Hero />
  <FeatureShowcase />
  <FeaturesGrid />
  <HowItWorks />

  <!-- Interactive 3D scene: Load JS only when visible in viewport -->
  <PlanetaryScene client:visible />

  <!-- Static footer: Zero JavaScript -->
  <Footer />
</Layout>
