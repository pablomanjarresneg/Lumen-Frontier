---
/**
 * Dashboard Page - LumenOS Core
 */
import Layout from '@/layouts/Layout.astro'
import DashboardComponent from '@/lumen-os/dashboard/Dashboard'
import EditModeIndicator from '@/lumen-os/dashboard/components/layout/EditModeIndicator.astro'
---

<Layout title="Dashboard - LumenOS" description="Your personalized learning command center">
  <div class="dashboard-page">
    <!-- Astro components (minimal JS) -->
    <EditModeIndicator />

    <!-- React island for interactive dashboard -->
    <DashboardComponent client:only="react" />
  </div>
</Layout>

<style is:global>
  .dashboard-page {
    position: relative;
    overflow-x: hidden;
    min-height: 100vh;
  }

  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    font-family: 'Space Grotesk', 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* Liquid Glass Effects */
  .glass-widget {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.5);
    box-shadow:
      0 8px 32px 0 rgba(31, 38, 135, 0.15),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  .glass-widget-dragging {
    background: rgba(255, 255, 255, 0.85);
    box-shadow:
      0 24px 48px 0 rgba(31, 38, 135, 0.25),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.6),
      0 0 0 1px rgba(255, 255, 255, 0.2);
  }

  .glass-header {
    position: relative;
    overflow: hidden;
  }

  .glass-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s;
  }

  .glass-widget:hover .glass-header::before {
    left: 100%;
  }

  .glass-content {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  }

  .glass-card-inner {
    backdrop-filter: blur(12px) saturate(150%);
    -webkit-backdrop-filter: blur(12px) saturate(150%);
    transition: all 0.2s ease;
  }

  .glass-card-inner:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .glass-button {
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    position: relative;
    overflow: hidden;
  }

  .glass-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .glass-button:hover::before {
    width: 300px;
    height: 300px;
  }

  .glass-topbar {
    background: rgba(255, 255, 255, 0.6);
    box-shadow:
      0 4px 24px 0 rgba(31, 38, 135, 0.1),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.8);
  }

  .glass-logo {
    position: relative;
    overflow: hidden;
  }

  .glass-logo::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transform: rotate(45deg);
    animation: shine 3s infinite;
  }

  .glass-empty-state {
    background: rgba(255, 255, 255, 0.5);
    box-shadow:
      0 8px 32px 0 rgba(31, 38, 135, 0.15),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.6);
  }

  .glass-indicator {
    box-shadow:
      0 8px 32px 0 rgba(31, 38, 135, 0.25),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.4);
  }

  .glass-progress {
    position: relative;
    overflow: hidden;
  }

  .shimmer {
    animation: shimmer 2s infinite;
  }

  .shadow-glass {
    box-shadow:
      0 8px 32px 0 rgba(31, 38, 135, 0.15),
      0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  .shadow-glass-lg {
    box-shadow:
      0 24px 48px 0 rgba(31, 38, 135, 0.25),
      0 0 0 1px rgba(255, 255, 255, 0.2);
  }

  /* Smooth scrollbar */
  * {
    scrollbar-width: thin;
    scrollbar-color: rgba(203, 213, 225, 0.5) rgba(241, 245, 249, 0.3);
  }

  *::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  *::-webkit-scrollbar-track {
    background: rgba(241, 245, 249, 0.3);
    border-radius: 10px;
  }

  *::-webkit-scrollbar-thumb {
    background: rgba(203, 213, 225, 0.5);
    border-radius: 10px;
    backdrop-filter: blur(4px);
  }

  *::-webkit-scrollbar-thumb:hover {
    background: rgba(148, 163, 184, 0.7);
  }

  /* Animation utilities */
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translate(-50%, 20px);
    }
    to {
      opacity: 1;
      transform: translate(-50%, 0);
    }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes blob {
    0%, 100% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  @keyframes shine {
    0% {
      left: -50%;
    }
    100% {
      left: 150%;
    }
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .animate-slideUp {
    animation: slideUp 0.3s ease-out;
  }

  .animate-slideDown {
    animation: slideDown 0.3s ease-out;
  }

  .animate-fadeIn {
    animation: fadeIn 0.2s ease-out;
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
