---
interface Feature {
  icon: string
  title: string
  description: string
}

const features: Feature[] = [
  {
    icon: 'lightning',
    title: 'Node-Based Learning',
    description: 'Every concept is a node in your knowledge graph. Build connections, explore relationships, and see how ideas interconnect.'
  },
  {
    icon: 'shield',
    title: 'Test Your Limits',
    description: 'Challenge yourself with interactive assessments. Track your progress and identify areas for growth in real-time.'
  },
  {
    icon: 'layers',
    title: 'Build Your Path',
    description: 'Create your own learning journey. Stack knowledge modules, customize your curriculum, and own your education.'
  }
]

const icons = {
  lightning: 'M13 10V3L4 14h7v7l9-11h-7z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  layers: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10'
}
---

<section id="features" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20">
      <h2 class="text-5xl font-bold text-slate-900 mb-6">
        More Than Just Lessons
      </h2>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto">
        A revolutionary approach to learning where every concept is a node and every lesson is a step forward.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="group relative p-8 bg-gradient-to-br from-slate-50 to-white rounded-2xl border border-slate-200 hover:border-primary-300 transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-2xl"></div>
          <div class="relative">
            <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary-200 transition-colors">
              <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[feature.icon as keyof typeof icons]}></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4">{feature.title}</h3>
            <p class="text-slate-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
