---
interface Props {
  icon: 'upload' | 'clipboard'
  iconColor: 'blue' | 'purple'
  badge: string
  title: string
  items: string[]
}

const { icon, iconColor, badge, title, items } = Astro.props

const icons = {
  upload: 'M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12',
  clipboard: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2'
}

const bgColor = iconColor === 'blue' ? 'bg-blue-100' : 'bg-purple-100'
const textColor = iconColor === 'blue' ? 'text-blue-600' : 'text-purple-600'
---

<div class="bg-white rounded-2xl p-8 shadow-lg border border-slate-100 hover:shadow-xl transition-shadow">
  <div class="flex items-start gap-4 mb-6">
    <div class={`flex-shrink-0 w-12 h-12 ${bgColor} rounded-xl flex items-center justify-center`}>
      <svg class={`w-6 h-6 ${textColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[icon]}></path>
      </svg>
    </div>
    <div>
      <div class="inline-block px-3 py-1 bg-blue-50 rounded-full text-xs font-semibold text-blue-700 mb-2">
        {badge}
      </div>
      <h3 class="text-2xl font-bold text-slate-900 mb-3">{title}</h3>
    </div>
  </div>
  <ul class="space-y-3">
    {items.map((item) => (
      <li class="flex items-start gap-3">
        <svg class={`w-5 h-5 ${textColor} flex-shrink-0 mt-0.5`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-slate-600">{item}</span>
      </li>
    ))}
  </ul>
</div>
